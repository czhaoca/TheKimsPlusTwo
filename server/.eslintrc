{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:import/recommended",
    "plugin:import/warnings",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    },
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "eqeqeq": "warn",
    "default-param-last": "off",
    "dot-notation": "warn",
    "import/no-extraneous-dependencies": "off",
    "no-await-in-loop": "error",
    "no-console": [
      "warn",
      {
        "allow": ["warn", "error"]
      }
    ],
    "no-multiple-empty-lines": "warn",
    "no-shadow": "warn",
    "no-var": "warn",
    "no-unused-vars": "warn",
    "space-unary-ops": ["error", { "words": true, "nonwords": false }],
    "spaced-comment": "off"
  },
  "ignorePatterns": ["dist/", "node_modules/"]
}
