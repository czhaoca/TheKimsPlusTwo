{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "eslint:recommended",    
    "airbnb-base",
    "plugin:import/recommended",
    "plugin:import/warnings",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [
          "src"
        ]
      }
    }
  },
  "rules": {
    "eqeqeq": "warn",
    "dot-notation": "warn",
    "no-await-in-loop": "error",
    "no-console": [
      "warn",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "no-multiple-empty-lines": "warn",
    "no-param-reassign": "off",
    "no-var": "warn",
    "no-unused-vars": "off",
    "space-unary-ops": ["error", {"words": true, "nonwords": false}],
    "spaced-comment": "off"
  },
  "ignorePatterns": [
    "dist/",
    "node_modules/"
  ]
}
